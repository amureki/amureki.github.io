    "url": "https://amureki.me/"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/amureki/amureki.github.io/issues"
  },
  "homepage": "https://github.com/amureki/amureki.github.io#readme",
  "devDependencies": {
    "@11ty/eleventy": "^0.12.1",
    "@11ty/eleventy-navigation": "^0.2.0",
    "@11ty/eleventy-plugin-rss": "^1.1.1",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.1.1",
    "autoprefixer": "^10.2.6",
    "luxon": "^1.27.0",
    "markdown-it": "^12.0.6",
    "markdown-it-anchor": "^7.1.0",
    "postcss": "^8.3.3",
    "postcss-cli": "^8.3.1",
    "tailwindcss": "^2.1.2"
  }
