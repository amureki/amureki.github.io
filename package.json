    "url": "https://amureki.me/"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/amureki/amureki.github.io/issues"
  },
  "homepage": "https://github.com/amureki/amureki.github.io#readme",
  "devDependencies": {
    "@11ty/eleventy": "^1.0.2",
    "@11ty/eleventy-navigation": "^0.3.5",
    "@11ty/eleventy-plugin-rss": "^1.2.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "^4.1.0",
    "autoprefixer": "^10.4.12",
    "luxon": "^3.0.4",
    "markdown-it": "^13.0.1",
    "markdown-it-anchor": "^8.6.5",
    "postcss": "^8.4.18",
    "postcss-cli": "^10.0.0",
    "tailwindcss": "^3.1.8"
  }
