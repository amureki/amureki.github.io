{
  "name": "amureki-eleventy",
  "version": "1.0.0",
  "description": "Source code for personal static website.",
  "scripts": {
    "build": "eleventy",
    "dev:postcss": "postcss css/assets/tailwind.css -d _site/css/ --config ./postcss.config.js -w",
    "prod:postcss": "NODE_ENV=production postcss css/assets/tailwind.css -d _site/css/ --config ./postcss.config.js",
    "watch": "eleventy --watch",
    "serve": "eleventy --serve",
    "start": "eleventy --serve",
    "debug": "DEBUG=* eleventy"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/amureki/amureki.github.io.git"
  },
  "author": {
    "name": "Rust Saiargaliev",
